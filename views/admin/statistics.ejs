    <script type="text/javascript">
        $(document).ready(function(){

            $.ajax({
                url:"/admin/api/get-dashboard-stats",
                method:"GET",
                success:function(data){
                    console.log(data);
                        var totalCount = 0;
                        data.teamsOrderedByStatus.forEach(function(data){
                            totalCount+=data.count;
                            if(data.status == "Accepted"){
                                $(".approved-videos").html(data.count);
                            }

                            if(data.status =="Declined"){
                                $(".declined-videos").html(data.count);
                            }

                            if(data.status == "En evaluación"){
                                $(".evaluation-videos").html(data.count);
                            }
                        })
                        $(".total-registrations").html(totalCount);
                        dashboard.initChartist(data);
                        $(".content").fadeIn();
                }
            })

        });
    </script>

